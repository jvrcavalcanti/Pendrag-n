{
    "name": "pendragon/pendragon",
    "description": "Micro framework",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "microframework",
        "php",
        "php framework",
        "framework",
        "micro-framework",
        "pendragon"
    ],
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "process-timeout": 0
    },

    "authors": [
        {
            "name": "Joao Victor Rocha Cavalcanti",
            "email": "jonnyvictor01@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "pendragon/framework": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "config/bootstrap.php",
            "config/app.php",
            "config/route.php",
            "config/view.php",
            "config/token.php",
            "config/db.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "serve": [
            "php -S localhost:8000 -t public"
        ],
        "test": "./vendor/bin/phpunit tests",
        "post-create-project-cmd": [
            "php -r \"copy('.env.example', '.env');\"",
            "php cli config.key"
        ]
    }
}
