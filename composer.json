{
    "name": "pendragon/framework",
    "description": "Micro framework",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "microframework",
        "php",
        "php framework",
        "framework",
        "micro-framework",
        "pendragon"
    ],
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "process-timeout": 0
    },

    "authors": [
        {
            "name": "Joao Victor Rocha Cavalcanti",
            "email": "jonnyvictor01@gmail.com"
        }
    ],
    "require": {
        "accolon/datalayer": "^2.0",
        "accolon/migration": "^1.0",
        "accolon/route": "^2.0",
        "accolon/template": "^3.0",
        "accolon/token": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Migration\\": "migration/"
        },
        "files": [
            "./config/db.php",
            "./config/helper.php",
            "./config/token.php",
            "./config/view.php",
            "./config/migration.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "serve": "php -S localhost:8000 -t public",

        "migrate": "App\\Console\\Migration::migrate",
        "migrate.rollback": "App\\Console\\Migration::rollback",
        "migrate.refresh": "App\\Console\\Migration::refresh",

        "make.migration": "App\\Console\\Make::migration",
        "make.model": "App\\Console\\Make::model",
        "make.controller": "App\\Console\\Make::controller",
        "make.middleware": "App\\Console\\Make::middleware",
        "make.view": "App\\Console\\Make::view",

        "clear.images": "App\\Console\\Clear::images",

        "test": "phpunit  --testdox tests"
    }
}
