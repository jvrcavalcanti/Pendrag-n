{
    "name": "accolon/pendragon",
    "description": "Mini framework",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "framework",
        "micro-framework",
        "pendragon"
    ],
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },

    "authors": [
        {
            "name": "Joao Victor Rocha Cavalcanti",
            "email": "jvrcavalcanti@scseduca.com.br"
        }
    ],
    "require": {
        "accolon/datalayer": "dev-master",
        "accolon/migration": "dev-master",
        "accolon/route": "dev-master",
        "accolon/template": "dev-master",
        "accolon/token": "^1.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Migration\\": "migration/"
        },
        "files": [
            "./config/db.php",
            "./config/helper.php",
            "./config/token.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "serve": "php -S localhost:8000 -t public",
        "migrate": "App\\Console\\Migration::migrate",
        "migrate:rollback": "App\\Console\\Migration::rollback",
        "migrate:refresh": "App\\Console\\Migration::refresh",
        "test": "phpunit  --testdox tests"
    }
}
